<style>
    .custom-dialog {
        background-color: #f9f9f9;
        border: 1px solid #ccc;
        border-radius: 8px;
        padding: 20px;
        width: 100%;
        height: 100%;
        max-width: 600px;
        margin: auto;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .blur {
        backdrop-filter: blur(10px);
    }

    .dialog-background {
        background-color: transparent;
    }

    .dialog-background-title {
        background: rgb(from var(--mud-palette-dark-darken) r g b / 50%);
        color: var(--mud-palette-white);
    }

    .dialog-background-surface {
        background: rgb(from var(--mud-palette-surface) r g b / 75%);
    }
</style>
@if (product is null)
{
    <Frontend.Shared.Loading />
}
else
{
    <MudDialog Class="custom-dialog blur dialog-background"
               TitleClass="blur dialog-background-title"
               ContentClass="dialog-background-surface py-10"
               ActionsClass="dialog-background-surface">
        <DialogContent>
            <ProductForm @ref="productForm" Product="product" OnValidSubmit="EditAsync" ReturnAction="Return" />
        </DialogContent>
    </MudDialog>
}
