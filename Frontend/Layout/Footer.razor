                <MudDivider Class="my-2" Style="width:25%; background-color:#fff;" />
                <MudList T="string">
                    <MudListItem>
                        <MudIcon Icon="@Icons.Material.Filled.Home" Class="mr-2" /> My company
                    </MudListItem>
                    <MudListItem>
                        <MudIcon Icon="@Icons.Material.Filled.Email" Class="mr-2" /> email@example.com
                    </MudListItem>
                    <MudListItem>
                        <MudIcon Icon="@Icons.Material.Filled.Phone" Class="mr-2" /> + 33 12 14 15 16
                    </MudListItem>
                    <MudListItem>
                        <MudIcon Icon="@Icons.Material.Filled.Print" Class="mr-2" /> + 33 12 14 15 16
                    </MudListItem>
                </MudList>
            </MudItem>

            <!-- Sección inferior: Back to top y copyright -->
            <MudItem xs="12">
                <MudDivider Class="my-2" Style="background-color:#fff;" />
                <MudGrid>
                    <MudItem xs="6">
                        <MudLink Href="#" >Back to top</MudLink>
                    </MudItem>
                    <MudItem xs="6" Class="d-flex justify-end align-center">
                        <MudText>
                            created with <MudIcon Icon="@Icons.Material.Filled.Favorite" /> by 
                            <MudLink Href="https://t-php.fr/43-theme-ecommerce-bootstrap-4.html" >
                                <i>t-php</i>
                            </MudLink> | <span>v. 1.0</span>
                        </MudText>
                    </MudItem>
