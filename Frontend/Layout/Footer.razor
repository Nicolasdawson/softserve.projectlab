                    <MudListItem>
                        <MudLink Href="">Link 3</MudLink>
                    </MudListItem>
                    <MudListItem>
                        <MudLink Href="">Link 4</MudLink>
                    </MudListItem>
                </MudList>
            </MudItem>

            <!-- Sección Others links -->
            <MudItem xs="12" sm="6" md="2">
                <MudText Typo="Typo.h6">Others links</MudText>
                <MudDivider Class="my-2" Style="width:25%; background-color:#fff;" />
                <MudList T="string">
                    <MudListItem>
                        <MudLink Href="">Link 1</MudLink>
                    </MudListItem>
                    <MudListItem>
                        <MudLink Href="">Link 2</MudLink>
