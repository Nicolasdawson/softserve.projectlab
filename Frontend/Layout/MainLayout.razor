@inherits LayoutComponentBase

<MudThemeProvider />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar>
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudLink Class="ml-5"  Color="Color.Inherit" Underline="Underline.None" Style="font-size: 3.2em; font-weight: bold;" Href="/">Petal & Potion</MudLink>

        <MudSpacer/>
        <MudLink Color="Color.Inherit" Underline="Underline.None" Class="mr-5" Href="/login">Iniciar Sesión</MudLink>
        <MudLink Color="Color.Inherit" Underline="Underline.None" Href="/registration">Crear Cuenta</MudLink>
    </MudAppBar>
    <MudDrawer @bind-Open="@_drawerOpen">
        <NavMenu/>
    </MudDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = false;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}